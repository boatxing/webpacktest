.loading
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 90;
  background-color: transparent

.loading_inner
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -70px;
  margin-top: -48px;
  width: 140px;
  border-radius: 6px;
  font-size: 14px;
  padding: 58px 0 10px 0

.loading_icon {
  position: absolute;
  top: 15px;
  left: 50%;
  margin-left: -16px;
  width: 24px;
  height: 24px;
  border: 2px solid #fff;
  border-radius: 24px;
  -webkit-animation: gif 1s infinite linear;
  animation: gif 1s infinite linear;
  clip: rect(0 auto 12px 0)
}

transform(d){
  -webkit-transform d
  -moz-transform d
  transform d
}

@keyframes gif {
  0% {
    transform rotate(0deg);
  }

  100% {
    transform rotate(360deg);
  }
}

.loading2 {
  text-align center
  padding 5px
  height 32px
  position: relative
  .loading_icon {
    border-color: #237FE5;
    top: 7px
  }
}