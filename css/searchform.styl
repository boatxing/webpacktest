/**
 * boatxing
 * 搜索输入框
 **/

.searchform {
  padding 5px 5px;
  display-box()
  line-height 40px
  background-color #f0f0f0
  input, .searchType {
    height 30px
    border-radius 2px
    border 1px solid transparent
  }
  .category {
    width: 65px;
    position relative
    margin-right 10px
    .searchType {
      height 28px
      line-height 28px
      width 62px
      padding-left 5px
      background-color #fff
      top 5px
      position relative
      display block
    }
    .caret {
      position absolute
      top 20px
      right 5px
    }
    .dropdown-menu {
      display none
      opacity 0
      position absolute
      background-color #ccc
      width 60px
      top 35px
      padding 0 5px
      border-radius 2px
      z-index 999
      li {
        line-height 25px
        a {
          display block
        }
      }
    }
  }
  .content {
    box-flex 1
    position relative
    input {
      width 100%
      padding 0 22px 0 30px
      background #fff url("data:image/png;base64,") no-repeat 5px 8px
      background-size 16px
    }
    .clear {
      position absolute
      z-index 999
      right 5px
      top 9px
      width 22px
      height 22px
      overflow hidden
      display block
      border 0
      text-indent -99px
      background transparent url("data:image/png;base64,") no-repeat 0 0
    }
  }
}

.caret
  display inline-block
  width 0
  height 0
  margin-left 2px
  vertical-align middle
  border-top 4px solid
  border-right 4px solid transparent
  border-left 4px solid transparent